# Database user
DATABASE_USER=database-user

# Database password
DATABASE_PASSWORD=database-password

#Database host
DATABASE_HOST=database-host

#Database name
DATABASE_NAME=database-name

# JWT secret key
# We recommends using at least 64 characters long.
JWT_SECRET_KEY=very-very-secret-key

# Log level
RUST_LOG=debug

# Server Port
# Which is port the server will run.
PORT=8000

# Frontend host
# The host of your frontend
FRONTEND_HOST=your-frontend-host

# Frontend port
# The port of your frontend
FRONTEND_PORT=8080

# Log file
# All the log will be stored here
# We recommends to use the default value
LOG_FILE=./app.log

# Upload directory
# Where the uploaded files from the app will be stored
# We recommends to use the default value
UPLOAD_DIRECTORY=./uploads
